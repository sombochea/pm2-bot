# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Authorized user IDs (comma separated)
AUTHORIZED_USERS=123456789,987654321
AUTHORIZED_CHATS_FOR_ALERT=-123456789,-987654321

# Monitoring settings
MONITOR_INTERVAL=30000
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80 # in MB

# PM2 CLI settings
PM2_COMMAND_TIMEOUT=30000

# Self-protection (CRITICAL for preventing infinite restart loops)
# Set this to the PM2 process name when running bot under PM2
PM2_PROCESS_NAME=pm2-telegram-bot
# Exclude bot from bulk operations to prevent self-restart loops
EXCLUDE_SELF_FROM_OPERATIONS=true

# Audit logging settings
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_FILE=logs/bot-audit.log
AUDIT_LOG_MAX_SIZE=10485760
AUDIT_LOG_MAX_FILES=5
AUDIT_LOG_MAX_LINES=10000