# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Authorized user IDs (comma separated)
AUTHORIZED_USERS=123456789,987654321
AUTHORIZED_CHATS_FOR_ALERT=-123456789,-987654321

# Monitoring settings
MONITOR_INTERVAL=30000
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80 # in MB
RESTART_THRESHOLD=5
# Group chat ID for alerts (optional, leave empty to send to individual users only)
ALERT_GROUP_CHAT_ID=-1001234567890

# Health check settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60000
STUCK_PROCESS_THRESHOLD=300000
MEMORY_LEAK_THRESHOLD=500
CPU_STUCK_THRESHOLD=0.1

# HTTP Health check settings
HTTP_HEALTH_CHECK_ENABLED=true
DEFAULT_HEALTH_ENDPOINT=/debug/health
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_PORT=3000

# App-specific health endpoints (JSON format)
# APP_HEALTH_ENDPOINTS={"myapp1":"http://localhost:3001/health","myapp2":"http://localhost:3002/api/health"}

# Audit logging settings
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_FILE=logs/bot-audit.log
AUDIT_LOG_MAX_SIZE=10485760
AUDIT_LOG_MAX_FILES=5
AUDIT_LOG_MAX_LINES=10000